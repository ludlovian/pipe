{
  "name": "postbox",
  "version": "1.1.3",
  "description": "Async postbox",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist/ .nyc_output/ coverage/ node_modules/.cache/",
    "format": "prettier-standard {src,test}/*.js",
    "lint": "standard {src,test}/*.js|snazzy",
    "test": "nyc ava",
    "coverage": "npm run test && nyc report --reporter=html && http-server coverage/ -p 8000",
    "build": "rollup -c rollup.config.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "ava": "^1.4.1",
    "esm": "^3.2.21",
    "http-server": "^0.11.1",
    "nyc": "^13.3.0",
    "prettier-standard": "^9.1.1",
    "rollup": "^1.7.4",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-terser": "^4.0.4",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "plock": "github:ludlovian/plock",
    "pswitch": "github:ludlovian/pswitch"
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "require": [
      "esm"
    ]
  }
}
